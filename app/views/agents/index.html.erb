<div class="container">
  <div class="text-center mb-4">
    <h2 class="text-success fw-bold">All Agents</h2>
  </div>

  <div class="d-flex justify-content-center mb-4">
    <%= link_to 'Add Agent', signup_path, class: "btn btn-success px-4 py-2 fw-semibold shadow-sm" %>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-light">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Joined Date</th>
      </tr>
    </thead>
    <tbody>
      <% @agents.each_with_index do |agent, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= agent.name %></td>
          <td><%= agent.email %></td>
          <td><%= agent.phone %></td>
          <td><%= agent.created_at.strftime("%d %b %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
