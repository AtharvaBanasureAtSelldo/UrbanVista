<h1>Sign Up</h1>

<%= form_with(model: @user) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Full Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email Address" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Phone Number" %>
    <%= f.text_field :phone, class: "form-control", placeholder: "Enter your phone number" %>
  </div>

  <div class="form-group">
    <%= f.label :role, "Role" %>
    <%= f.select :role, User::ROLES, { prompt: "Select your role" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tenant_id, "Tenant" %>
    <%= f.collection_select :tenant_id, Tenant.all, :id, :name, { prompt: "Select your tenant" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign Up", class: "btn btn-success" %>
  </div>
<% end %>

<p>Already have an account? <%= link_to 'Login', login_path %></p>