<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4 text-success">Reset Password</h1>
      <p class="text-center text-muted">Enter your email to receive reset instructions.</p>

      <%= form_tag password_resets_path, method: :post, class: "border p-4 rounded shadow-sm bg-light" do %>
        <div class="form-group mb-3">
          <%= label_tag :email, "Email Address", class: "form-label text-success" %>
          <%= text_field_tag :email, params[:email], class: "form-control border-success", placeholder: "Enter your email", required: true %>
        </div>

        <div class="d-grid">
          <%= submit_tag "Reset Password", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <p class="text-center mt-3">
        Remembered your password? <%= link_to 'Login', login_path, class: "text-success fw-bold" %>
      </p>
    </div>
  </div>
</div>
