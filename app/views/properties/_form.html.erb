<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">Create Property</h4>
        </div>
        <div class="card-body">
          <% if @property.errors.any? %>
            <div class="alert alert-danger">
              <h5>There were errors with your submission:</h5>
              <ul class="mb-0">
                <% @property.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with(model: @property, local: true, html: { class: "property-form" }) do |f| %>
            <!-- Title -->
            <div class="mb-3">
              <%= f.label :title, "Title", class: "form-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter property title" %>
            </div>

            <!-- Address -->
            <div class="mb-3">
              <%= f.label :address, "Address", class: "form-label" %>
              <%= f.text_area :address, class: "form-control", placeholder: "Enter property address", rows: 3 %>
            </div>

            <!-- Price -->
            <div class="mb-3">
              <%= f.label :price, "Price", class: "form-label" %>
              <%= f.number_field :price, class: "form-control", placeholder: "Enter property price" %>
            </div>

            <!-- Tenant -->
            <div class="mb-3">
              <%= f.label :tenant_id, "Tenant", class: "form-label" %>
              <%= f.collection_select :tenant_id, Tenant.all, :id, :name, 
                  { prompt: "Select your tenant" }, 
                  { class: "form-select" } %>
            </div>

            <!-- User -->
            <div class="mb-3">
              <%= f.label :user_id, "Agent", class: "form-label" %>
              <%= f.collection_select :user_id, User.where(role: "agent"), :id, :name, 
                  { prompt: "Select your Agent" }, 
                  { class: "form-select" } %>
            </div>

            <!-- Tags -->
            <div class="mb-3">
              <%= f.label :tags, "Select Tags", class: "form-label" %>
              <div class="tags-container">
                <% Tag.all.each do |tag| %>
                  <div class="form-check form-check-inline">
                    <%= check_box_tag "property[tag_ids][]", tag.id, @property.tag_ids.include?(tag.id), class: "form-check-input" %>
                    <%= label_tag "property_tag_#{tag.id}", tag.name, class: "form-check-label" %>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="text-end">
              <%= f.submit "Create Property", class: "btn btn-success px-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
