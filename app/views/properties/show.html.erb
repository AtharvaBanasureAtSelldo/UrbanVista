<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center py-3">
          <h2 class="mb-0"><i class="fas fa-building me-2"></i>Property Details</h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12 mb-3">
              <h5 class="text-muted"><i class="fas fa-tag me-2 text-success"></i>Title</h5>
              <p class="fs-5 fw-semibold text-dark"><%= @property.title %></p>
            </div>

            <div class="col-md-6 mb-3">
              <h5 class="text-muted"><i class="fas fa-map-marker-alt me-2 text-danger"></i>Address</h5>
              <p class="fs-5 text-dark"><%= @property.address %></p>
            </div>

            <div class="col-md-6 mb-3">
              <h5 class="text-muted"><i class="fas fa-money-bill-wave me-2 text-warning"></i>Price</h5>
              <p class="fs-5 text-dark"><%= number_to_currency(@property.price, unit: "Rs ", precision: 0) %></p>
            </div>
          </div>

          <div class="text-center mt-4">
            <%= link_to 'Edit Property', edit_property_path(@property), class: "btn btn-outline-warning px-4 me-3" %>
            <%= link_to 'Back to Properties', properties_path, class: "btn btn-outline-secondary px-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
