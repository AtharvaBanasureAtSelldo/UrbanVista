<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4 text-success">Login</h1>

      <%= form_with url: login_path, method: :post, local: true, class: "border p-4 rounded shadow-sm bg-light" do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, "Email Address", class: "form-label text-success" %>
          <%= f.email_field :email, class: "form-control border-success", placeholder: "Enter your email", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "Password", class: "form-label text-success" %>
          <%= f.password_field :password, class: "form-control border-success", placeholder: "Enter your password", required: true %>
        </div>

        <div class="d-grid">
          <%= f.submit "Login", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <p class="text-center mt-3">
        Don't have an account? <%= link_to 'Sign Up', signup_path, class: "text-success fw-bold" %>
      </p>

      <p class="text-center mt-3">
        Forgot password? <%= link_to 'Forgot password?', new_password_reset_path, class: "text-success fw-bold" %>
      </p>
    </div>
  </div>
</div>
