<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4 text-success">Create Customer</h1>
      <%= form_with(model: @customer, local: true, class: "border p-4 rounded shadow-sm bg-light") do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, "Full Name", class: "form-label text-success" %>
          <%= f.text_field :name, class: "form-control border-success", placeholder: "Enter your name", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :phoneno, "Phone Number", class: "form-label text-success" %>
          <%= f.text_field :phoneno, class: "form-control border-success", placeholder: "Enter your phone number", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :tenant_id, "Tenant", class: "form-label text-success" %>
          <%= f.collection_select :tenant_id, Tenant.all, :id, :name, { prompt: "Select your tenant" }, class: "form-select border-success" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Save Customer", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>