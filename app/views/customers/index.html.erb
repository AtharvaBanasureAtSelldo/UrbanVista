<div class="container my-4 mt-0">
  <div class="text-center mb-4">
    <h2 class="text-success fw-bold">All Customers</h2>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%= link_to 'Add Customer', new_customer_path, class: "btn btn-success px-4 py-2 fw-semibold shadow-sm" %>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-light">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each_with_index do |customer, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= customer.name %></td>
          <td><%= customer.phoneno %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
