<header>
  <!-- Top Bar with Dark Green Background -->
  <div class="px-3 py-2 text-white border-bottom" style="background-color: #198754;">
    <div class="container d-flex flex-wrap align-items-center justify-content-between">
      <!-- Logo -->
      <a href="/" class="d-flex align-items-center my-2 my-lg-0 text-white text-decoration-none">
        <i class="fas fa-building fa-2x me-2"></i> <!-- Real Estate Icon -->
        <span class="fs-4">Urban Vista <%= current_user.present? ? ( current_user.role=="admin" ? "Admin" : "Agent" ) : "" %></span>
      </a>

      <!-- Navigation Menu & Login/Signup Buttons -->
      <div class="d-flex align-items-center">
        <% if current_user %>
          <ul class="nav me-3">
            <li>
              <a href="/" class="nav-link text-light">
                <i class="fas fa-home"></i> <!-- Home Icon -->
                Home
              </a>
            </li>
            <li>
              <a href="/properties" class="nav-link text-white">
                <i class="fas fa-box"></i> <!-- Properties Icon -->
                Properties
              </a>
            </li>
            <li>
              <a href="/customers" class="nav-link text-white">
                <i class="fas fa-users"></i> <!-- Customers Icon -->
                Customers
              </a>
            </li>
          </ul>
        <% end %>
        <!-- Login & Sign-up Buttons -->
        <div>
          <% if current_user %>
            <!-- Show Logout if user is logged in -->
            <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-success text-white" %>
          <% else %>
            <!-- Show Login & Sign-up if no user is logged in -->
            <%= link_to "Login", login_path, class: "btn btn-outline-light me-2" %>
            <%= link_to "Sign-up", signup_path, class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
